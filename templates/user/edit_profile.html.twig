<script src="{{ asset('assets/dist/js/jquery.min.js') }}"></script>
	<script type="text/javascript">
     	function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#preview')
                        .attr('src', e.target.result);
                };
                reader.readAsDataURL(input.files[0]);
            }
        }

		jQuery(document).ready(function($) {
			$('#trig-upl').on('click', function(){
				$('#user_profileFile').trigger('click');
			})

		    var $container = $('div#user_extraWorkActivities');
		    $container.attr('data-prototype')
		    	.replace(/__name__label__/g, '');
		    var index = $container.find(':input').length;
		    $('#add_activity').click(function(e){
		        addExtraWorkActivity($container);
		        e.preventDefault();
		        return false;
		    });
		    if (index == 0) {
		        addExtraWorkActivity($container);
		    } else {
		        $container.children('div').each(function(){
		            addDeleteLink($(this));
		        });
		    }

		    function addExtraWorkActivity($container) {
		        var template = $container.attr('data-prototype')
		            .replace(/__name__label__/g, 'Activité ' + (index + 1))
		            .replace(/__name__/g, index);
		        var $prototype = $(template);
		        addDeleteLink($prototype);
		        $container.append($prototype);
		        index++;
		    }

		    function addDeleteLink($prototype) {
		        var $deleteLink = $('<a href="#" class="fa fa-remove text-danger" title="Supprimer"></a>');
		        $prototype.append($deleteLink);
		        $deleteLink.click(function(e) {
		            $prototype.remove();
		            e.preventDefault();
		            return false;
		        });
		    }
		})
	</script>
